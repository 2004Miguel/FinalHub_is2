<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Thistle"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/titulo">
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/buscar">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <EditText
                android:layout_width="match_parent"
                android:hint="@string/buscar"
                android:layout_height="wrap_content">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/para_ti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/para_ti"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="@string/para_ti">

            </Button>
            <Button
                android:layout_width="wrap_content"
                android:text="@string/videos"
                android:id="@+id/videos"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:text="@string/rutas"
                android:id="@+id/rutas"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:text="@string/agencias"
                android:id="@+id/agencias"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>



        <ImageView
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            app:srcCompat="@drawable/paisaje1"
            android:scaleType="centerCrop"
            android:layout_height="200dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/likeReaction"
                android:layout_width="50dp"
                app:lottie_rawRes="@raw/like"
                app:lottie_autoPlay="false"
                android:layout_height="50dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/dislikeReaction"
                android:layout_width="50dp"
                app:lottie_rawRes="@raw/dislike2"
                app:lottie_autoPlay="false"
                android:layout_height="50dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/paisaje2"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:scaleType="centerCrop"
            android:layout_height="200dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="50dp"
                app:lottie_rawRes="@raw/like"
                app:lottie_autoPlay="false"
                android:layout_height="50dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="50dp"
                app:lottie_rawRes="@raw/dislike2"
                app:lottie_autoPlay="false"
                android:layout_height="50dp" />

        </LinearLayout>





        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:srcCompat="@drawable/paisaje3">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="50dp"
                app:lottie_rawRes="@raw/like"
                app:lottie_autoPlay="false"
                android:layout_height="50dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="50dp"
                app:lottie_rawRes="@raw/dislike2"
                app:lottie_autoPlay="false"
                android:layout_height="50dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/paisaje4"
            android:layout_marginLeft="10dp"
            android:layout_height="200dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="50dp"
                app:lottie_rawRes="@raw/like"
                app:lottie_autoPlay="false"
                android:layout_height="50dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="50dp"
                app:lottie_rawRes="@raw/dislike2"
                app:lottie_autoPlay="false"
                android:layout_height="50dp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>